const int mod = int(1e9) + 7, INF = 0x3f3f3f3f;
const int maxn = 1e5 + 13;
int n;
ll A[maxn];

ll fastmod(ll x, ll n) {
    ll ret = 1;
    while (n) {
        if (n & 1ll) ret = ret * x % mod;
        x = x * x % mod;
        n >>= 1;
    }
    return ret;
}

int main(void)
{
#ifdef LOCAL
    //freopen("in.txt", "r", stdin);
    //freopen("out.txt", "w", stdout);
#endif
    cout << (mod + 1) / 3 << endl;
    cin >> n;
    ll y = 1;
    bool ok = true;
    for (int i = 0; i < n; i++) cin >> A[i];
    for (int i = 0; i < n; i++) {
        if (A[i] % 2 == 0) ok = false;
        A[i] %= mod - 1;
        y = y * A[i] % (mod - 1);
    }
    y = (y - 1 + mod - 1) % (mod - 1);
    ll fm = fastmod(2, y);
    ll fz = (fm + (ok ? -1 : 1)) * (mod + 1) / 3 % mod;
    cout << fz << "/" << fm << endl;
    return 0;
}
